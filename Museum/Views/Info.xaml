<Window x:Class="Museum.Views.Info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Museum.Views"
        mc:Ignorable="d" Background="#EECF87"
        Title="Info" Height="450" Width="550" WindowStartupLocation="CenterScreen" Icon="/photo\logo.png" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="Name_VistavkiLB" FontSize="24" Grid.Row="1" Content="Название выставки:" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <ScrollViewer Grid.Row="1" Grid.Column="1" >
            <TextBlock x:Name="Name_Vistavki" FontSize="24"  Height="Auto" Width="Auto" TextWrapping="Wrap"/>
        </ScrollViewer>
        <Label x:Name="Opisanie_VistavkiLB" FontSize="24" Grid.Row="2" Content="Описание выставки:" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <ScrollViewer Grid.Row="2" Grid.Column="1">
            <TextBlock x:Name="Opisanie_Vistavki" FontSize="24"  Height="Auto" Width="Auto" TextWrapping="Wrap" />
        </ScrollViewer>
        <Label x:Name="Zal" FontSize="24" Grid.Row="3" Content="Зал выставки:" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBlock x:Name="Zal_Vistavki" FontSize="24" Grid.Row="3" Grid.Column="1" Height="auto"  VerticalAlignment="Center"/>
        <Label Content="Информация о выставке" Grid.ColumnSpan="2" FontSize="24" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</Window>
